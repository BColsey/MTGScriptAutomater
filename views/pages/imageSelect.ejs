<!DOCTYPE html>
<html>
<head>
	<title>Image Select | MTG Script Automater</title>
	<% include ../partials/head %>
</head>
<body>

<div class="container">
	<div class="row">
		<div class="twelve columns pageTitle">
	  	<a href="/"><h1>MtG Script Automater</h1></a>
	  </div>
	</div>
 
	<form action="/imageDownload" method="POST">
	
	<div class="row">
		<div class="twelve columns">
			<input type="hidden" name="script" value="<%= baseScript %>">
			<h4>Entered Script:</h4>
			<p id="baseScript"><%- baseScript %></p>
		</div>
		
	</div>
	
	<div class="row">
		<div class="twelve columns">
			<ol class="cardList">
			<% for ([key, value] of cardImages) { %>						
				<li> 
					<h5><%= key %></h5>
					<div>
						<ul class="versionDisplay">
							<% for (let i = 0; i < value.length; i ++) { %>
								<li id="<%= `${key + i}` %>" onclick="removeItems(<%= `${key + i}` %>)">
									<figcaption><%= value[i][0] %></figcaption>
									<input type="hidden" name="<%= key %>" value="<%= value[i][1] %>">
									<% for (images of value[i][1]) { %>
										<% if (images === 'https://img.scryfall.com/errors/missing.jpg') { %>
											<img class ="versionSelect" src="<%= images %>"> 
										<% } else { %>
											<img class ="versionSelect" src="<%= images %>"> 
										<% } %>
									<% } %>
								</li>
							<% } %>
						</ul>				
					</div>
				</li>
			<% } %>
			</ol>
		</div>
		<input type="submit" value="Download Images">
	</div>
	
	</form>
</div>

</body>
</html>